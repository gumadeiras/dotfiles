# >>> mamba initialize >>>
# !! Contents within this block are managed by 'micromamba shell init' !!
export MAMBA_EXE="$HOME/.local/bin/micromamba"
export MAMBA_ROOT_PREFIX="$HOME/micromamba"
__mamba_setup="$($MAMBA_EXE shell hook --shell zsh --root-prefix $MAMBA_ROOT_PREFIX 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__mamba_setup"
else
    alias micromamba="$MAMBA_EXE"  # Fallback on help from micromamba activate
fi
unset __mamba_setup
# <<< mamba initialize <<<

source ~/.zsh/alias.zsh
source ~/.zsh/functions.zsh

# pnpm
export PNPM_HOME="$HOME/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# bun completions
[ -s "$HOME/.bun/_bun" ] && source "$HOME/.bun/_bun"

# Load local secrets (API keys, tokens, etc.)
if [[ -f "$HOME/.config/secrets/env.zsh" ]]; then
  source "$HOME/.config/secrets/env.zsh"
fi

# Added by Antigravity
export PATH="$HOME/.antigravity/antigravity/bin:$PATH"

# Created by `pipx` on 2026-01-10 09:18:52
export PATH="$PATH:$HOME/.local/bin"

# opencode
export PATH="$HOME/.opencode/bin:$PATH"
export ROKU_IP="192.168.50.73"

export PATH="$HOME/.local/bin:/usr/bin:/bin:/usr/sbin:/sbin:$PATH"

# OpenClaw Completion
source "$HOME/.openclaw/completions/openclaw.zsh"

# Sublime
export PATH="/Applications/Sublime Text.app/Contents/SharedSupport/bin:$PATH"
export EDITOR='subl -w'
export VISUAL='subl -w'

# Use oh-my-posh
eval "$(oh-my-posh init zsh --config ~/.config/oh-my-posh/config.json)"

# homebrew
export PATH="/opt/homebrew/bin:$PATH"
